enum SEXE {MASCULIN,FEMININ};

struct Persone {
	int age;
	std::string nom, prenom;
	SEXE sexe;

};

void ajouterPersonne(std::vector<Persone> v) {
	std::cout << "j'ajoute une personne" << std::endl;
	int age;
	std::string nom, prenom;
	std::string sexe_str;
	SEXE s;

	std::cout << "Indiquez l'age" << std::endl;
	std::cin >> age;

	std::cout << "Indiquez le nom" << std::endl;
	std::cin >> nom;
	std::cout << "Indiquez le prenom" << std::endl;
	std::cin >> prenom;
	std::cout << "Indiquez le sexe (M ou F)" << std::endl;
	std::cin >> sexe_str;

	if (sexe_str == "M")
		s = SEXE::MASCULIN;
	else if (sexe_str == "F")
		s = SEXE::FEMININ;
	else {
		std::cout << "Erreur sur le sexe" << std::endl;
		return;
	}

	Persone p = { age,nom,prenom,s };
	v.push_back(p);
}

void afficherPersonne(std::vector<Persone> v) {
	std::cout << "Index de la personne à afficher" << std::endl;

	int index;
	std::cin >> index;

	if (index > v.size()) {
		std::cout << "Erreur l'index est trop grand !!! " << std::endl;
		return;
	}

	Persone p = v.at(index);
	std::cout << "Age : " << p.age << std::endl;
	std::cout << "Nom : " << p.nom << std::endl;
	std::cout << "Prenom : " << p.prenom << std::endl;
	std::cout << "Sexe : " << p.sexe << std::endl;
}

void supprimerPersonne(std::vector<Persone> v) {
	std::cout << "Index de la personne à supprimer" << std::endl;

	int index;
	std::cin >> index;

	if (index > v.size()) {
		std::cout << "Erreur l'index est trop grand !!! " << std::endl;
		return;
	}

	v.erase(v.begin() + index);
}

void help() {
	std::cout << std::endl << "MENU : " << std::endl;
	std::cout << "1-Ajouter une personne" << std::endl;
	std::cout << "2-Afficher une personne" << std::endl;
	std::cout << "3-Supprimer une personne" << std::endl;
	std::cout << "4-Quitter le programme" << std::endl;
}


